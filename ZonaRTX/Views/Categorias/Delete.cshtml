@model ZonaRTX.Models.CategoriasModel

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="text-center mb-4">¿Estás seguro que deseas eliminar esta categoría?</h5>
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.id_categoria</dd>

                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.nombre_categoria</dd>

                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Model.descripcion</dd>
                </dl>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="id_categoria" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
