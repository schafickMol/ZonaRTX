@model ZonaRTX.Models.ProductosProveedoresModel

@{
    ViewData["Title"] = "Eliminar Producto-Proveedor";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="text-center mb-4">¿Estás seguro que deseas eliminar este registro?</h5>
                <dl class="row">
                    <dt class="col-sm-4">ID Producto</dt>
                    <dd class="col-sm-8">@Model.id_producto</dd>

                    <dt class="col-sm-4">ID Proveedor</dt>
                    <dd class="col-sm-8">@Model.id_proveedor</dd>

                    <dt class="col-sm-4">Precio de Compra</dt>
                    <dd class="col-sm-8">@Model.precio_compra</dd>
                </dl>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="id_producto" />
                    <input type="hidden" asp-for="id_proveedor" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
