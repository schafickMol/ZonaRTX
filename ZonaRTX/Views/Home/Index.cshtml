@model IEnumerable<ZonaRTX.Models.ProductosModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">Bienvenido a nuestra Tienda</h1>
        <p class="lead text-muted">¡Encuentra los mejores productos al mejor precio!</p>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card shadow-sm" style="width: 100%;">
                    <img src="~/lib/images/laptop.png" class="card-img-top" alt="@item.nombre_producto" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark">@item.nombre_producto</h5>
                        <p class="card-text text-muted">@item.descripcion</p>
                        <p class="card-text">
                            <strong class="text-success">Precio: </strong>
                            <span class="text-dark">@item.precio.ToString("C")</span>
                        </p>
                        <div class="mt-auto">
                            <a href="@Url.Action("Comprar", "Compra", new { id_producto = item.id_producto })"
                               class="btn btn-primary w-100">Comprar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
